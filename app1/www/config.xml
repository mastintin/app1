<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "id de nuestra aplicacion"
        version   = "1.0.0">

    <name>Nombre de nuestra app</name>

    <description>
        Descripción de nuestra app.
    </description>

    <author href="http://www.tuweb.com" email="info@tuemail.com">
        Tu nombre / empresa 
    </author>

    <!--
        If you do not want any permissions to be added to your app, add the
        following tag to your config.xml; you will still have the INTERNET
        permission on your app, which PhoneGap requires.
    -->
    <preference name="permissions"                value="none"/>

    <!-- Configura tu aplicación con las siguientes preferencias. -->
    <preference name="phonegap-version"           value="3.1.0" />          <!-- all: Versión con la que quieres compilar PhoneGap -->
    <preference name="orientation"                value="portrait" />        <!-- all: default quiere decir las dos direcciones landscape y portrait estan aceptadas -->
    <preference name="target-device"              value="universal" />      <!-- all: posibles selecciones para dispositivo handset, tablet, or universal -->
    <preference name="fullscreen"                 value="true" />           <!-- all: Oculta la barra de estado de la cabecera de la pantalla -->
    <preference name="prerendered-icon"           value="true" />           <!-- ios: si el icono es prerendered, iOS no se aplicará brillo al icono de la aplicación en la pantalla principal del usuario -->
    <preference name="ios-statusbarstyle"         value="black-opaque" />   <!-- ios: black-translucent aparecerá negro porque el webview PhoneGap no pasa por debajo de la barra de estado -->
    <preference name="detect-data-types"          value="true" />           <!-- ios: controla si los tipos de datos (como el teléfono no. y fechas) se activan automáticamente en enlaces por el sistema-->
    <preference name="exit-on-suspend"            value="false" />          <!-- ios: si se define como true, la aplicación terminará cuando se pulsa el boton home -->
    <preference name="auto-hide-splash-screen"    value="true" />           <!-- ios: si se establece en false, la pantalla de presentación se queda oculta utilizando una API de JavaScript -->
    <preference name="disable-cursor"             value="false" />          <!-- blackberry: impide un mouse-icon/cursor aparezca en la aplicación-->
    <preference name="android-minSdkVersion"      value="7" />              <!-- android: MIN versión SDK admite en el dispositivo de destino. Versión MAX está en blanco de forma predeterminada. -->
    <preference name="android-installLocation"    value="auto" />           <!-- android: ubicación de instalación. 'auto' elegirá. 'internalOnly' es la memoria del dispositivo. 'preferExternal' es SDCard. -->

    <!-- Plugins -->

    <!-- Core plugins -->
    <gap:plugin name="org.apache.cordova.battery-status" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.media-capture" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.contacts" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.device-motion" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.globalization" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.vibration" />

    <!-- Third party plugins -->
    <!-- Una lista de plugins esta disponible en https://build.phonegap.com/plugins -->
    <!-- 
        <gap:plugin name="com.phonegap.plugins.barcodescanner" />
    -->

    <!-- Define el icono para cada plataforma. -->
    <icon src="icon.png" />
    <icon src="res/icon/android/icon-36-ldpi.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/android/icon-48-mdpi.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="res/icon/blackberry/icon-80.png"     gap:platform="blackberry" />
    <icon src="res/icon/blackberry/icon-80.png"     gap:platform="blackberry" gap:state="hover"/>
    <icon src="icons/57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="icons/72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="icons/114.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="icons/144.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="res/icon/webos/icon-64.png"          gap:platform="webos" />
    <icon src="res/icon/windows-phone/icon-48.png"  gap:platform="winphone" />
    <icon src="res/icon/windows-phone/icon-173.png" gap:platform="winphone"   gap:role="background" />

    <!-- Define la splsh screen para cada plataforma. -->
    <gap:splash src="res/screen/android/screen-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/screen-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="res/screen/blackberry/screen-225.png"         gap:platform="blackberry" />
    <gap:splash src="splash.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="icons/640x960.png" gap:platform="ios"     width="640" height="960" />
	<gap:splash src="icons/640x1136.png" gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape.png"     gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="res/screen/windows-phone/screen-portrait.jpg" gap:platform="winphone" />

    <!--
        Define access to external domains.

        <access />            - a blank access tag denies access to all external resources.
        <access origin="*" /> - a wildcard access tag allows access to all external resource.

        Otherwise, you can specify specific domains:
    -->
    <access origin="*"/> <!-- allow local pages -->
    <!--
        <access origin="http://phonegap.com" />                    - allow any secure requests to http://phonegap.com/
        <access origin="http://phonegap.com" subdomains="true" />  - same as above, but including subdomains, such as http://build.phonegap.com/
    -->

</widget>